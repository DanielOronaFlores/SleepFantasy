<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TextView "ESTADÃSTICAS" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="35sp"
            android:gravity="center"
            android:text="@string/gr_ficas"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginTop="10sp">

            <!--Primera Fila -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:text="@string/fecha"
                android:textColor="#FFF"
                android:textSize="20sp" />
            <Button
                android:id="@+id/chartDate"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:gravity="center"
                android:background="@color/buttonData_background_purple"
                android:textSize="15sp"
                android:layout_marginTop="5sp">
            </Button>

            <!-- Segunda fila -->
            <TextView
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="5sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/filtro"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerTipoFiltro"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:layout_marginTop="5sp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"/>

            <!-- Tercera fila -->
            <TextView
                android:id="@+id/textViewDato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:text="@string/dato"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerDato"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:layout_row="2"
                android:layout_column="1"/>
        </GridLayout>

        <Button
            android:id="@+id/chartConsult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="35sp"
            android:background="@color/button_background_purple"
            android:text="@string/consultar" />
    </LinearLayout>
</ScrollView>