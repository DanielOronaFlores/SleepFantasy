<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addAudios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAudios"
    android:orientation="vertical"
    android:background="@color/layout_background_purple">

    <Button
        android:id="@+id/addSelectedAudios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35sp"
        android:layout_gravity="center"
        android:background="@color/button_background_purple"
        android:textSize="20sp"
        android:text="@string/a_adir"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newAudiosRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="35sp"
        android:layout_marginStart="35sp"
        android:layout_marginEnd="25sp"/>
</LinearLayout>