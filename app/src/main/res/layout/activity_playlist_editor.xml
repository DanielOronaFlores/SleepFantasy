<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/playlistEditor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaylistEditor"
    android:background="@color/layout_background_purple">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginStart="25sp"
       android:layout_marginEnd="25sp">

       <HorizontalScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="35sp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_gravity="center">

               <EditText
                   android:id="@+id/editPlaylistName"
                   android:layout_width="match_parent"
                   android:layout_height="48sp"
                   android:layout_gravity="center"/>

               <GridLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5sp"
                   android:columnCount="3"
                   android:rowCount="1">

                   <Button
                       android:id="@+id/addAudios"
                       android:layout_width="70sp"
                       android:layout_height="wrap_content"
                       android:layout_column="0"
                       android:background="@color/button_background_purple"
                       android:text="AGREGAR "/>

                   <Space
                       android:layout_width="10sp"
                       android:layout_height="wrap_content"
                       android:layout_column="1" />

                   <Button
                       android:id="@+id/deleteAudios"
                       android:layout_width="70sp"
                       android:layout_height="wrap_content"
                       android:layout_row="0"
                       android:layout_column="2"
                       android:background="@color/button_background_purple"
                       android:text="ELIMINAR" />
               </GridLayout>
           </LinearLayout>
       </HorizontalScrollView>


         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/recyclerEditAudios"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:layout_gravity="center"
             android:layout_marginTop="5sp" />

       <Button
           android:id="@+id/editPlaylist"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5sp"
           android:background="@color/button_background_purple"
           android:textSize="20sp"
           android:layout_marginBottom="35sp"
           android:textAllCaps="true"
           android:text="editar playlist"/>
   </LinearLayout>
</ScrollView>