<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="VisualLintBounds">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="10sp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/musicSelector"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:clickable="true"
                android:contentDescription="@string/audiosSelector"
                android:focusable="true"
                android:foregroundGravity="center"
                android:src="@drawable/placeholder_ramon"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/recordVisualizer"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="5sp"
                android:layout_gravity="center"
                android:clickable="true"
                android:contentDescription="@string/recordVisualizer"
                android:focusable="true"
                android:foregroundGravity="center"
                android:src="@drawable/placeholder_ramon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:layout_marginTop="35sp"
            android:orientation="vertical"
            tools:ignore="VisualLintBounds">

            <ImageView
                android:id="@+id/avatarDisplay"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:clickable="true"
                android:contentDescription="@string/avatarDisplay"
                android:focusable="true"
                android:foregroundGravity="center"
                tools:ignore="VisualLintWearMargin" />

            <ImageView
                android:id="@+id/avatarInformationButton"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:clickable="true"
                android:contentDescription="@string/avatarInformation"
                android:focusable="true"
                android:foregroundGravity="center"
                android:src="@drawable/menu_information"
                tools:ignore="VisualLintBounds,VisualLintWearMargin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="25sp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gameSelectorButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:contentDescription="@string/gameSelector"
                android:focusable="true"
                android:foregroundGravity="center"
                android:src="@drawable/menu_gamification"
                tools:ignore="VisualLintWearMargin" />

            <ImageView
                android:id="@+id/menuChartsButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5sp"
                android:clickable="true"
                android:contentDescription="@string/chartVisualizer"
                android:focusable="true"
                android:foregroundGravity="center"
                android:src="@drawable/menu_charts"
                tools:ignore="VisualLintWearMargin" />
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>
