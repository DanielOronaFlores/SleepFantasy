<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterChoice"
    android:id="@+id/characterChoice"
    android:orientation="horizontal"
    android:background="@color/layout_background_purple">

    <ImageView
        android:id="@+id/leftButton"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:src="@drawable/interface_left"
        android:focusable="true" />

    <ImageView
        android:id="@+id/selectCharacter"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/rightButton"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:src="@drawable/interface_right"
        android:focusable="true"
        android:contentDescription="@string/avanzar_en_seleccion_de_personaje" />
</LinearLayout>