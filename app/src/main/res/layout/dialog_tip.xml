<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/tip_dialog_layout"
    android:background="@color/layout_background_purple">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:text="@string/sleep_fantasy_recomienda"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/tip_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="5sp"
        android:textAlignment="inherit"
        android:textSize="15sp">
    </TextView>
    
    <Button
        android:id="@+id/tip_dialog_button"
        android:layout_width="100sp"
        android:layout_height="48sp"
        android:layout_marginTop="5sp"
        android:layout_gravity="center"
        android:background="@color/buttonData_background_purple"
        android:layout_marginBottom="10sp"
        android:textAllCaps="true"
        android:text="@string/lo_hare">
    </Button>
    
</LinearLayout>