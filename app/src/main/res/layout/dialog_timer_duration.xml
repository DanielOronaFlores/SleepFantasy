<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background_purple"
    android:gravity="center"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/timerHoursDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="2"
            android:textAlignment="center"
            android:textSize="48sp"
            android:hint="00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="48sp"
            android:text=":" />

        <EditText
            android:id="@+id/timerMinutesDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="2"
            android:textAlignment="center"
            android:textSize="48sp"
            android:hint="00" />
    </GridLayout>


    <Button
        android:id="@+id/setTimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:background="@color/button_background_purple"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:text="establecer"/>
</LinearLayout>